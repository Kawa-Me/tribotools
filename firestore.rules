
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Webhook needs write access to update user subscriptions.
    // In production, you should secure this (e.g., with a Cloud Function and a secret key)
    // instead of leaving it open.
    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      allow write: if true; // Allows webhook to update user data
    }

    match /modules/{moduleId} {
      // Authenticated users can read modules
      allow read: if request.auth != null;
      // Only admins can write to modules
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
