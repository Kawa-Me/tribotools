rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Modules collection
    match /modules/{moduleId} {
      // Any authenticated user can list and get modules.
      // 'list' is for collection queries (e.g., loading the dashboard).
      // 'get' is for single document reads (e.g., viewing a specific module page).
      allow list, get: if request.auth != null;
      
      // Only admins can create, update, or delete modules.
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      // A user can read and update their own document. They cannot list all users.
      allow get, update: if request.auth != null && request.auth.uid == userId;
      
      // Admins can perform any action on user documents.
      // 'list' allows the admin panel to show all users.
      // 'write' allows admins to edit user subscriptions.
      allow list, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
